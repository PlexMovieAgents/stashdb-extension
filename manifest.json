{
  "name": "stashdb-extension",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "background",
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://stashdb.org/*"
      ],
      "js": [
        "lib/jquery.min.js",
        "lib/common.js",
        "lib/scene.js",
        "content_script.js"
      ],
      "css": [
        "lib/scene.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/green_check.svg",
        "images/yellow_check.svg",
        "images/blue_check.svg",
        "images/red_x.svg",
        "images/ignore.svg",
        "images/yellow_star.svg"
      ],
      "matches": [
        "https://stashdb.org/*"
      ]
    }
  ],
  "action": {
    "default_popup": "settings/settings.html"
  }
}